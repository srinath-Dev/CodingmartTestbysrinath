<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"

    tools:context=".AboutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/half_circle" />

        <RelativeLayout
            android:id="@+id/imagelayout"
            android:paddingTop="3dp"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:text="About"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_marginBottom="20dp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Iconimage2"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_marginTop="55dp"
                android:scaleType="centerCrop"

                android:src="@drawable/mine"
                app:civ_border_color="@color/white"
                app:civ_border_width="5dp" />

            <TextView
                android:layout_below="@+id/Iconimage2"
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:layout_marginLeft="20dp"

                android:textStyle="bold"
                android:text="SrinathDev"

                android:layout_marginTop="20dp"


                android:textSize="16sp"
                android:layout_marginBottom="20dp" />



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/circleLayouts"
            android:layout_below="@+id/imagelayout"
            android:layout_marginTop="-20dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/editprofile_button_rlayout"
                android:clickable="true"
                android:layout_marginStart="65dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="10dp">

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/settings_button_rlayout"
                android:clickable="true"
                android:layout_marginEnd="65dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="65dp"
                android:layout_marginLeft="30dp">


            </RelativeLayout>
        </RelativeLayout>





        <RelativeLayout
            android:layout_below="@+id/circleLayouts"
            android:id="@+id/StFirstLayout"
            android:layout_width="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp"
            android:padding="5dp"

            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10dp">


            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="Coding Mart Test"
                android:gravity="center_horizontal"
                android:layout_marginLeft="70dp"

                android:layout_marginBottom="0dp"
                android:textColor="#444"
                android:textSize="30sp"

                />

            <TextView

                android:id="@+id/St_1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:text="I am a software developer who
focuses on Android and Game
developments. I also own a
YouTube channel called Reality
Talkers wherein I provide
Technical updates. And I’m
Google Developer Student
clubs Lead and also Google
cloud facilitator.
For more Details Visit : www.srinathdev.me"
                android:textColor="#444"
                android:textSize="14sp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_below="@+id/St_1"
                android:text="© 2021 , All rights reserved By Srinath"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">





        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>